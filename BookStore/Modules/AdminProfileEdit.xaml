<Window x:Class="BookStore.Modules.AdminProfileEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Modules"
        mc:Ignorable="d"
        Icon="/Images/favicon.ico"
        Title="Редактирование профиля администратора"
        Height="590" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование профиля" Style="{StaticResource WindowTitle}" Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Фамилия" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="LastNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Имя" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="FirstNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Отчество" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="EmailTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Новый пароль" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PasswordTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 5"/>
            <TextBlock Text="Оставьте пустым, чтобы не менять пароль" 
                       FontSize="11" 
                       Foreground="Gray" 
                       Margin="0 0 0 30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Отмена" Click="CancelButton_Click" Style="{StaticResource CancelButton}" Margin="0 0 10 0"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="BookStore.Modules.AuthorAddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Modules"
        mc:Ignorable="d"
        Icon="/Images/favicon.ico"
        Title="{Binding WindowTitle, FallbackValue='Автор'}"
        Height="490" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" Style="{StaticResource WindowTitle}" Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Фамилия" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="LastNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Имя" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="FirstNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Отчество" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15"/>

            <TextBlock Text="Год рождения" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="BirthYearTextBox" Style="{StaticResource ModernTextBox}" 
                     PreviewTextInput="NumberValidationTextBox" MaxLength="4"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Отмена" Click="CancelButton_Click" Style="{StaticResource CancelButton}" Margin="0 0 10 0"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Window>

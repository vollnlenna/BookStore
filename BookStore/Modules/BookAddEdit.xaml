<Window x:Class="BookStore.Modules.BookAddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Modules"
        mc:Ignorable="d"
        Icon="/Images/favicon.ico"
        Height="650"
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}"
                   Style="{StaticResource WindowTitle}"
                   HorizontalAlignment="Center" Margin="0 0 0 15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0 0 20 0">

                    <TextBlock Text="Название книги" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="TitleTextBox" Style="{StaticResource ModernTextBox}"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10 0 10 10" MaxLength="200"/>

                    <TextBlock Text="Автор" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="AuthorComboBox" Style="{StaticResource ModernComboBox}"
                              DisplayMemberPath="FullName" SelectedValuePath="AuthorID"
                              SelectedValue="{Binding AuthorID}"
                              Margin="10 0 10 10"/>

                    <TextBlock Text="Год издания" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="YearTextBox" Style="{StaticResource ModernTextBox}"
                             Text="{Binding PublicationYear, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10 0 10 10" PreviewTextInput="NumericOnly" MaxLength="4"/>

                    <TextBlock Text="Количество страниц" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="PagesTextBox" Style="{StaticResource ModernTextBox}"
                             Text="{Binding PageCount, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10 0 10 10" PreviewTextInput="NumericOnly" MaxLength="5"/>

                    <TextBlock Text="Описание" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="DescriptionTextBox" Style="{StaticResource ModernTextBox}"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Height="120" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Margin="10 0 10 10"/>
                </StackPanel>

                <StackPanel Grid.Column="1">

                    <TextBlock Text="Обложка" Style="{StaticResource FormLabel}" HorizontalAlignment="Center" Margin="0 0 0 5"/>

                    <Border BorderBrush="#E0E0E0" BorderThickness="1"
                            Background="{StaticResource LightBrush}"
                            CornerRadius="8"
                            Width="200" Height="200" Margin="0 0 0 10"
                            HorizontalAlignment="Center">
                        <Image x:Name="CoverPreviewImage" Stretch="UniformToFill"
                               Source="{Binding CoverPreview}"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 15">
                        <Button Content="Загрузить файл"
                                Style="{StaticResource SecondaryButton}"
                                Padding="10 8"
                                Click="BrowseButton_Click"
                                Margin="0 0 10 0"/>

                        <Button Content="Очистить"
                                Style="{StaticResource SecondaryButton}"
                                Padding="10 8"
                                Click="RemoveCoverButton_Click"/>
                    </StackPanel>

                    <TextBlock Text="Цена" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="PriceTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumericOnly"
                     LostFocus="PriceTextBox_LostFocus"
                     Margin="10 0 10 10"/>

                    <CheckBox x:Name="AvailableCheckBox" Content="В наличии"
                              Style="{StaticResource FormCheckBox}"
                              IsChecked="{Binding IsAvailable}"
                              Checked="AvailableCheckBox_Changed"
                              Unchecked="AvailableCheckBox_Changed"
                              Margin="10"/>

                    <TextBlock Text="Количество" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="QuantityTextBox" Style="{StaticResource ModernTextBox}"
                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding QuantityVisibility}"
                             PreviewTextInput="QuantityTextBox_PreviewTextInput"
                             LostFocus="QuantityTextBox_LostFocus"
                             TextChanged="QuantityTextBox_TextChanged"
                             Margin="10 0 10 10" MaxLength="5"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Content="Отмена" Style="{StaticResource CancelButton}"
                    Padding="20 10" Margin="0 0 20 0"
                    Click="CancelButton_Click"/>

            <Button Content="Сохранить" Style="{StaticResource SaveButton}"
                    Padding="20 10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

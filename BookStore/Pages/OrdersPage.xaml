<Page x:Class="BookStore.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заказы"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" Margin="0 0 20 0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="OrdersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource OrderCard}" Margin="0 0 0 15" MouseLeftButtonUp="OrdersItemsControl_MouseLeftButtonUp">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
                                    <TextBlock Text="Заказ №" 
                                               FontFamily="{StaticResource TitleFont}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="{Binding OrderID}"
                                               FontFamily="{StaticResource TitleFont}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Margin="5 0 0 0"/>
                                    <TextBlock Text="{Binding Status, StringFormat=' - {0}'}"
                                               FontSize="14"
                                               Foreground="{StaticResource DarkBrush}"
                                               Margin="10 0 0 0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0 0 0 10">
                                    <TextBlock Text="Позиции заказа:"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DarkBrush}"
                                               Margin="0 0 0 5"/>

                                    <ItemsControl ItemsSource="{Binding OrderItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" BorderThickness="0 0 0 1" Padding="0 5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding BookTitle}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource DarkBrush}"/>
                                                            <TextBlock Text="{Binding AuthorName}"
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource SecondaryBrush}"/>
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1" 
                                                                   Text="{Binding Quantity, StringFormat='{}×{0}'}"
                                                                   Foreground="{StaticResource DarkBrush}"
                                                                   Margin="10 0"/>

                                                        <TextBlock Grid.Column="2" 
                                                                   Text="{Binding Price, StringFormat='{}{0}₽'}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <Grid Grid.Row="2" Margin="0 0 0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Клиент:"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkBrush}"/>
                                        <TextBlock Text="{Binding CustomerName}"
                                                   Foreground="{StaticResource DarkBrush}"/>
                                        <TextBlock Text="{Binding CustomerPhone}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Тип оплаты: "
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource DarkBrush}"/>
                                            <TextBlock Text="{Binding PaymentType}"
                                            Foreground="{StaticResource DarkBrush}"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding OrderDate, StringFormat='Дата заказа: {0:dd.MM.yyyy}'}"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryBrush}"/>
                                        <TextBlock Text="{Binding DeliveryDate, StringFormat='Дата получения: {0:dd.MM.yyyy}'}"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <Border Grid.Row="3" 
                                        Background="{StaticResource LightBrush}" 
                                        CornerRadius="8" 
                                        Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding TotalQuantity, StringFormat='Общее количество: {0} шт'}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource DarkBrush}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="Итого:"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource DarkBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding TotalAmount, StringFormat=' {0}₽'}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Поиск заказа по ФИО, телефону клиента"
                    FontFamily="{StaticResource TitleFont}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource DarkBrush}"
                       Margin="0 0 0 5"/>
            <TextBox x:Name="SearchTextBox" Style="{StaticResource ModernTextBox}" Margin="0 0 0 15" Padding="10" TextChanged="SearchTextBox_TextChanged"/>
            <TextBlock Text="Фильтр по статусам" FontFamily="{StaticResource TitleFont}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkBrush}" Margin="0 0 0 5"/>
            <ComboBox x:Name="StatusComboBox" SelectionChanged="StatusComboBox_SelectionChanged" Style="{StaticResource ModernComboBox}" Margin="0 0 0 15" Padding="10"/>
            <TextBlock Text="Отчет по продажам" FontFamily="{StaticResource TitleFont}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkBrush}" Margin="0 0 0 5"/>
            <StackPanel Margin="0 0 0 15">
                <DatePicker x:Name="StartDatePicker" SelectedDate="{x:Static system:DateTime.Today}" Margin="0 0 0 5"/>
                <DatePicker x:Name="EndDatePicker" SelectedDate="{x:Static system:DateTime.Today}" Margin="0 0 0 5"/>
                <Button x:Name="GenerateReportButton" Content="Сформировать отчет" Style="{StaticResource SecondaryButton}" Padding="15 10" Click="GenerateReportButton_Click"/>
            </StackPanel>
            <Button x:Name="AddOrderButton" Content="➕ Добавить заказ" Style="{StaticResource PrimaryButton}" Padding="15 10" Margin="0 0 0 10" Click="AddOrderButton_Click"/>
            <Button x:Name="EditOrderButton" Content="✏️ Редактировать" Style="{StaticResource PrimaryButton}" Padding="15 10" Margin="0 0 0 10" Click="EditOrderButton_Click"/>
            <Button x:Name="DeleteOrderButton" Content="🗑️ Удалить" Style="{StaticResource PrimaryButton}" Padding="15 10" Background="#E74C3C" Click="DeleteOrderButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

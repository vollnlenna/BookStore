<Page x:Class="BookStore.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20 15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📚 BookStore" 
                               FontFamily="{StaticResource TitleFont}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0 0 20 0"/>
                    <TextBlock x:Name="StoreAddressText"
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="14"
                               Foreground="White"
                               Opacity="0.9"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="UserNameText"
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0 0 10 0"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="EditProfileButton"
                                Content="✏️"
                                Style="{StaticResource PrimaryButton}"
                                Padding="8 5"
                                Background="Transparent"
                                BorderBrush="White"
                                BorderThickness="1"
                                Foreground="White"
                                FontSize="12"
                                ToolTip="Редактировать профиль"
                                Click="EditProfileButton_Click"
                                Visibility="Collapsed">
                        </Button>
                    </StackPanel>
                    <Button x:Name="LogoutButton"
                            Content="Выйти"
                            Style="{StaticResource PrimaryButton}"
                            Padding="15 8"
                            Background="LightCoral"
                            BorderBrush="White"
                            BorderThickness="1"
                            Foreground="White"
                            Margin="15 0 0 0"
                            Click="LogoutButton_Click">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="MainContentFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Margin="10"/>

        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1 0 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20 15">

                <Button x:Name="BooksButton"
                        Content="Книги"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20 10"
                        Margin="5"
                        Click="BooksButton_Click"/>

                <Button x:Name="AuthorsButton"
                        Content="Авторы"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20 10"
                        Margin="5"
                        Click="AuthorsButton_Click"/>

                <Button x:Name="OrdersButton"
                        Content="Заказы"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20 10"
                        Margin="5"
                        Click="OrdersButton_Click"/>

                <Button x:Name="CustomersButton"
                        Content="Клиенты"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20 10"
                        Margin="5"
                        Click="CustomersButton_Click"/>

                <Button x:Name="UsersButton"
                        Content="Сотрудники"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20 10"
                        Margin="5"
                        Click="UsersButton_Click"
                        Visibility="Collapsed"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>

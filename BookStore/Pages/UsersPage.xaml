<Page x:Class="BookStore.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      xmlns:converters="clr-namespace:BookStore.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Пользователи"
      Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <converters:BoolToPasswordDisplayConverter x:Key="BoolToPasswordDisplayConverter"/>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15" VerticalAlignment="Bottom">
            <StackPanel Margin="0 0 20 0">
                <TextBlock Text="Поиск сотрудника"
                           FontFamily="{StaticResource TitleFont}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrush}"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="SearchTextBox"
                         Width="300"
                         Style="{StaticResource ModernTextBox}"
                         Padding="10"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <Button Content="➕ Добавить сотрудника" 
                    Click="AddEmployee_Click" 
                    Style="{StaticResource PrimaryButton}" 
                    Padding="15 10" 
                    Height="40"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 0"/>

            <Button x:Name="EditButton" Content="✏️ Редактировать" 
                    Click="EditEmployee_Click" 
                    Style="{StaticResource PrimaryButton}" 
                    Padding="15 10" 
                    Margin="0 0 10 0"
                    Height="40"
                    VerticalAlignment="Bottom"            
                    IsEnabled="False"/>

            <Button x:Name="DeleteButton" Content="🗑️ Удалить" 
                    Click="DeleteEmployee_Click" 
                    Style="{StaticResource PrimaryButton}"
                    Padding="15 10"
                    Height="40"
                    VerticalAlignment="Bottom"
                    Background="#E74C3C"
                    IsEnabled="False"/>
        </StackPanel>

        <DataGrid x:Name="EmployeesGrid" Grid.Row="1"
          Style="{StaticResource ModernDataGrid}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionChanged="EmployeesGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserID}" Width="Auto"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding HasPassword, Converter={StaticResource BoolToPasswordDisplayConverter}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

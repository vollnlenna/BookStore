<Page x:Class="BookStore.Pages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
Title="Клиенты"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15" VerticalAlignment="Bottom">
            <StackPanel Margin="0 0 20 0">
                <TextBlock Text="Поиск клиента"
                           FontFamily="{StaticResource TitleFont}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrush}"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="SearchTextBox"
                         Width="300"
                         Style="{StaticResource ModernTextBox}"
                         Padding="10"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <Button Content="➕ Добавить клиента" 
                    Click="AddCustomer_Click" 
                    Style="{StaticResource PrimaryButton}" 
                    Padding="15 10" 
                    Height="40"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 0"/>

            <Button x:Name="EditButton" Content="✏️ Редактировать" 
                    Click="EditCustomer_Click" 
                    Style="{StaticResource PrimaryButton}" 
                    Padding="15 10" 
                    Margin="0 0 10 0"
                    Height="40"
                    VerticalAlignment="Bottom"            
                    IsEnabled="False"/>

            <Button x:Name="DeleteButton" Content="🗑️ Удалить" 
                    Click="DeleteCustomer_Click" 
                    Style="{StaticResource PrimaryButton}"
                    Padding="15 10"
                    Height="40"
                    VerticalAlignment="Bottom"
                    Background="#E74C3C"
                    IsEnabled="False"/>
        </StackPanel>

        <DataGrid x:Name="CustomersGrid" Grid.Row="1"
                  Style="{StaticResource ModernDataGrid}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="CustomersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="Auto"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

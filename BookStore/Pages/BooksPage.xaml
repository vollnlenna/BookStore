<Page x:Class="BookStore.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Книги"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" Margin="0 0 20 0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="BooksItemsControl" MouseLeftButtonUp="BooksItemsControl_MouseLeftButtonUp">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource BookCard}" 
                                Margin="0 0 0 15"
                                Cursor="Hand"
                                Background="{Binding CardBackground, FallbackValue={x:Null}}"
                                Opacity="{Binding CardOpacity, FallbackValue=1.0}"
                                BorderBrush="{Binding BorderColor, FallbackValue={x:Null}}"
                                BorderThickness="{Binding BorderThickness, FallbackValue=1}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Width="80" 
                                        Height="120" 
                                        Background="{StaticResource LightBrush}"
                                        CornerRadius="8"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1">
                                    <Image Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="{Binding CoverImage}"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15 0">
                                    <TextBlock Text="{Binding Title}" 
                                               FontFamily="{StaticResource TitleFont}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               TextWrapping="Wrap"
                                               Margin="0 0 0 5"/>

                                    <TextBlock Text="{Binding AuthorName}"
                                               FontSize="14"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               Margin="0 0 0 3"/>

                                    <TextBlock Text="{Binding PublicationYear, StringFormat='Год: {0}'}"
                                               FontSize="12"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               Opacity="0.7"
                                               Margin="0 0 0 2"/>

                                    <TextBlock Text="{Binding PageCount, StringFormat='Страниц: {0}'}"
                                               FontSize="12"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               Opacity="0.7"
                                               Margin="0 0 0 2"/>

                                    <TextBlock Text="{Binding Description}"
                                               FontSize="12"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0 5 0 0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0} ₽'}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{Binding TextColor, FallbackValue={StaticResource DarkBrush}}"
                                               HorizontalAlignment="Center"
                                               Margin="0 0 0 5"/>

                                    <Border CornerRadius="10"
                                            Padding="8 4"
                                            HorizontalAlignment="Center"
                                            Background="{Binding StatusColor, FallbackValue={StaticResource PrimaryBrush}}">
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Поиск книги"
                           FontFamily="{StaticResource TitleFont}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkBrush}"
                           Margin="0 0 0 5"/>

                <TextBox x:Name="SearchTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0 0 0 15"
                         Padding="10"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button x:Name="AddBookButton"
                        Content="➕ Добавить книгу"
                        Style="{StaticResource PrimaryButton}"
                        Padding="15 10"
                        Margin="0 0 0 10"
                        Click="AddBookButton_Click"/>

                <Button x:Name="EditBookButton"
                        Content="✏️ Редактировать"
                        Style="{StaticResource PrimaryButton}"
                        Padding="15 10"
                        Margin="0 0 0 10"
                        Click="EditBookButton_Click"/>

                <Button x:Name="DeleteBookButton"
                        Content="🗑️ Удалить"
                        Style="{StaticResource PrimaryButton}"
                        Padding="15 10"
                        Background="#E74C3C"
                        Click="DeleteBookButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
